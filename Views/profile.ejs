<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Profile</title>
    <style media="screen">
      h2{
        text-align: center;
      }
      table {
      border-collapse: collapse;
      width: 100%;
      padding: 20px
    }

    th, td {
      padding: 8px;
      text-align: left;
      border-bottom: 1px solid #ddd;
      }
    form{
      text-align: center;
      padding: 20px
    }
    </style>
  </head>
  <body>
    <div>
      <h2>Profile</h2>
    </div>
    <table>
      <thead>
         <td>ID</td>
         <td>Username</td>
         <td>Password</td>
         <td>Contact Name</td>
         <td>Actions</td>
      </thead>
      <tr>
        <%profile.forEach(dt =>{ %>

        <td><%=dt.Id_profile%></td>
        <td><%=dt.Username%></td>
        <td><%=dt.Password%></td>
        <td><%=dt.Name%></td>
        <td><a href="/profile/edit/<%=dt.Id_profile%>">Edit<a>
        <a href="/profile/delete/<%=dt.Id_profile%>">Delete</a></td>
      </tr>
        <% })%>
    </table>
    <div>
        <form class="" action="/profile" method="post">
          <input type="text" name="username" placeholder="Username">
          <input type="password" name="password" placeholder="Password">
          <select class="" name="contact_id">
            <!-- <option value=""></option> -->
            <%contact.forEach(nama =>{ %>
            <option value="<%=nama.ID%> "><%=nama.Name%></option>
            <%})%>
          </select>
          <input type="submit" value="Submit">
          <br>
          <%if (error.length !== 0){%>
            <h2><%=error[0]%></h2>
          <%}%>
        </form>
    </div>
    <div>

    </div>
  </body>
</html>
