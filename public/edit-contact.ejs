<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <link rel="stylesheet" href="/style/css/common.css">
    <title>Edit Contact Page</title>
</head>
<body>
    <section>
        <div class="header">Edit Data Kontak</div>
        <form action="/contacts/edit/<%=data[0].id%>" method="post">
            <input type="hidden" name="id" value="<%=data[0].id%>">
            <table border="1">
                <tr>
                    <td>Name</td>
                    <td><input type="text" name="name" value="<%=data[0].name%>"></td>
                </tr>
                <tr>
                    <td>Company</td>
                    <td><input type="text" name="company" value="<%=data[0].company%>"></td>
                </tr>
                <tr>
                    <td>Phone Number</td>
                    <td><input type="text" name="phone" value="<%=data[0].phone%>"></td>
                </tr>
                <tr>
                    <td>Email</td>
                    <td><input type="text" name="email" value="<%=data[0].email%>"></td>
                </tr>
                <tr>
                    <td colspan="2"><input type="submit" value="Simpan"></td>
                </tr>
            </table>
        </form>
    </section>
</body>
</html>
