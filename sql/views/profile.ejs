<!DOCTYPE html>
<html>
  <head>
  <style>
    table {
  font-family: arial, sans-serif;
  border-collapse: collapse;
  width: 100%;}
td, th {
  border: 1px solid #dddddd;
  text-align: left;
  padding: 8px;}
tr:nth-child(even) {
  background-color: #dddddd;}
  input[type=text], select {
  width: 100%;
  padding: 12px 20px;
  margin: 8px 0;
  display: inline-block;
  border: 1px solid #ccc;
  border-radius: 4px;
  box-sizing: border-box;}
input[type=submit] {
  font-family: arial, sans-serif;
  width: 100%;
  background-color: #4CAF50;
  color: white;
  padding: 14px 20px;
  margin: 8px 0;
  border: none;
  border-radius: 4px;
  cursor: pointer;}
input[type=submit]:hover {
  background-color: #45a049;}
div {
  border-radius: 5px;
  background-color: #f2f2f2;
  padding: 20px;}
  </style>
    <meta charset="utf-8">
    <title>PROFILE</title>
  </head>
  <body>
    <table>
      <tr>
        <th>No</th>
        <th>Username</th>
        <th>Password</th>
        <th>Contacts</th>
        <% let i = 1 %>
      <% rows.forEach(function(el){%>
          <tr>
            <td> <%= i %> </td>
            <td> <%= el.username %> </td>
            <td> <%= el.password %> </td>
            <td> <%= el.name %> </td>
            <td> <a href="/profiles/edit/<%=el.id%>">edit</a>
            <td> <a href="/profiles/delete/<%=el.id%>">delete</a>
          </tr>
        <% i++ })%>
      </tr>
    </table>
    <% if (isEdit === false) {%>
    <form action="/profiles" method="post">
      username:<br>
      <input type="text" name="username" >
      <br>
      password:<br>
      <input type="text" name="password" >
      <br>
      <select name="id_contact">
        <% data.forEach(function(row){%>
        <option value="<%= row.id %>"><%= row.name %> </option>
        <% })%>
      </select>
      <input type="submit" value="ADD">
      </form>
    <% } %>
  <% if (isEdit === true) {%>
    username:<br>
    <input type="text" name="username" value="<%=rows[0].username%>">
    <br>
    password:<br>
    <input type="text" name="password" value="<%=rows[0].password%>">
    <br>
    <input type="submit" value="EDIT"=>
    <select>
      <% data.forEach(function(row){%>
      <option value="name"><%= row.name %> </option>
      <% })%>
    </select>
  </form>
  <% } %>
  <form action="/profiles/edit/<%=rows[0].id%>" method="post">
  </body>
</html>
