<!DOCTYPE html>
<html lang="en">
<head>
  <title>Address</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="#">Hacktiv8</a>
      </div>
      <ul class="nav navbar-nav">
        <li><a href="/">HOME</a></li>
        <li><a href="/contacts">CONTACT</a></li>
        <li><a href="/groups">GROUPS</a></li>
        <li><a href="/profiles">PROFILES</a></li>
        <li class="active"><a href="/addresses">ADDRESSES</a></li>
      </ul>
    </div>
  </nav>
  <div class="container">
    <h2>ADDRESS</h2>
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>ID</th>
            <th>STREET</th>
            <th>CITY</th>
            <th>ZIPCODE</th>
            <th>CONTACT ID</th>
            <th colspan="2">ACTION</th>
          </tr>
        </thead>
        <tbody>
            <%dataAddress.forEach (row=> {%>
              <tr>
                <td><%= row.id %></td>
                <td><%= row.street %></td>
                <td><%= row.city %></td>
                <td><%= row.zipcode %></td>
                <td><%= row.ContactId%></td>
                <td>
                  <a href="/addresses/edit/<%= row.id %>">EDIT</a>
                  <a href="/addresses/delete/<%= row.id %>">DELETE</a>
                </td>
              </tr>
              <% }) %>
          </tbody>
        </table>
      </div>

      <form class="form-inline" role="form" action="/addresses" method="post">
        <div class="form-group">
          <label for="street">Street</label>
          <input type="TEXT" name="street" placeholder="Enter Street">
        </div>
        <div class="form-group">
          <label for="city">City</label>
          <input type="TEXT" name="city" placeholder="Enter City">
        </div>
        <div class="form-group">
          <label for="zipcode">Zipcode</label>
          <input type="INTEGER" name="zipcode" placeholder="Enter Zipcode">
        </div>
        <select name="ContactId">
          <%for(let i=0; i< dataContacts.length; i++){%>
            <option value="<%=dataContacts[i].id%>"><%=dataContacts[i].name%></option>
            <%}%>
          </select>
          <button type="submit" class="btn btn-default">ADD</button>
        </form>
      </div>


    </body>
    </html>
