<!DOCTYPE html>
<html>
  <% include ../partials/header %>
  <body>
    <div class="container">
      <div class="row">
        <div class="column column-50">
          <h1>Add Address</h1>

          <table>
            <thead>
              <tr>
                <th><a href="/">Home</a></th>
                <th><a href="/contacts">Contacts</a></th>
                <th><a href="/groups">Groups</a></th>
                <th><a href="/profiles">Profile</a></th>
                <th><a href="/addresses">Addresses</a></th>
              </tr>
            </thead>
          </table><br>

          <form class="" action="/addresses/add" method="post">
            Street:<br>
            <input type="text" name="street" placeholder="input street name"><br>
            <br>
            City:<br>
            <input type="text" name="city" placeholder="input city name"><br>
            <br>
            Zipcode:<br>
            <input type="text" name="zipcode" placeholder="input zipcode number"><br>
            <br>
            Contact Name:<br>
            <select name="contactId">
              <% dataContacts.forEach((data) => { %>
                <option value="<%= data.id %>"><%= data.name %></option>
              <% }) %>
            </select><br>
            <br>
            <input type="submit" value="Submit">
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
