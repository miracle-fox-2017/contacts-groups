<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Groups</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  </head>
  <body>
      <% include ../partials/nav.ejs%>

    <h1>Addresses</h1>

  <div class="container">


  <%if(data.length > 0){%>
    <h3><%=data[0].name%></h3>
  <%} else {%>
    <h4 style="color:red">ooopss! address not found </h4>
  <%}%>
    <table class="table">
      <thead>
        <tr>
        <th>Street</th>
        <th>City</th>
        <th>Zipcode</th>
        <th>Option</th>
      </tr>
      </thead>
      <tbody>
      <%data.forEach(item =>{%>


          <tr>
          <td><%=item.street%></td>
          <td><%=item.city%></td>
          <td><%=item.zipcode%></td>
          <td>
            <a href="/addresses/edit/<%=item.id%>">Edit</a>
            <a href="/addresses/delete/<%=item.id%>">Delete</a>
          </td>
        <%})%>
        </tr>

      </tbody>
    </table>


    <div class="container">

      <div class="col-xs-4 col-md-2">



        <br>

        </div>
    </div>
  </div>

  </body>
  <style>
  table#t01 tr:nth-child(even) {
  background-color: #eee;
}
table#t01 tr:nth-child(odd) {
  background-color: #fff;
}
table#t01 th {
  color: white;
  background-color: black;
}
  </style>
</html>
