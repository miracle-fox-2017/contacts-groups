<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Edit data di addresses</title>
  </head>
  <body>
    <a href="/contacts">contacts</a> | <a href="/groups">groups</a> | <a href="/addresses">address</a> | <a href="/profiles">profile</a>    <h1>Address</h1>
    <div>
    <table>
      <tr>
        <th>id</th>
        <th>street</th>
        <th>city</th>
        <th>zipcode</th>
      </tr>
      <!-- tampilkan semua data address -->
      <% rows.forEach (address => { %>
        <tr>
          <td><%= address.id %></td>
          <td><%= address.street %></td>
          <td><%= address.city %></td>
          <td><%= address.zipcode %></td>
          <td><a href="/addresses/edit/<%= address.id %>">edit</a> | <a href="/addresses/delete/<%= address.id %>">delete</a> </td>
        </tr>
      <% }) %>
      
    </table>
  </div>
  
  <!-- disini tambah form untuk tambah address -->
  <div>
    <h2>Edit Address</h2>
    <form class="" action="" method="post">
      <input type="hidden" name="id" value="<%= rows[0].id %>">
      Street:   <input type="text" name="street" value="<%= rows[0].street %>" placeholder="street"><br>
      City: <input type="text" name="city" value="<%= rows[0].city %>" placeholder="city"><br>
      Zipcode: <input type="text" name="zipcode" value="<%= rows[0].zipcode %>" placeholder="zipcode"><br>
      contacts: 
      <select name="id_contacts">
      <% contacts.forEach (contact => { %>
        <option value="<%= contact.id %>" <% if(rows[0].cid == contact.id){ %> <%= 'selected' %> <% } %> ><%= contact.name %></option> 
      <% }) %>
      </select>
      <br><input type="submit" name="" value="KIRIM">
    </form>
  </div>
  
  </body>
</html>

