    <table>
        <tr>
            <th>No</th>
            <th>Nama</th>
            <th>Street</th>
            <th>City</th>
            <th>Zipcode</th>
            <th>Action</th>
        </tr>
        <% 
            let no = 0;
            rowsAddresses.forEach(function(row,index){ 
            no++;
        %>
            <tr>
                <td>
                    <%= no %>
                </td>
                <td>
                    <%= rowsContacts[0].name %>
                </td>
                <td>
                    <%= row.street %>
                </td>
                <td>
                    <%= row.city %>
                </td>
                <td>
                    <%= row.zipcode %>
                </td>
