<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Contacts</title>
  </head>
  <body>
    <table>
      <tr>
        <th>ID</th>
        <th>NAME</th>
        <th>COMPANY</th>
        <th>TELP NUMBER</th>
        <th>EMAIL</th>
      </tr>
    <% for(let i=0;i<rowContacts.length;i++){ %>
    <tr>
      <td><%=rowContacts[i].ID%></td>
      <td><%=rowContacts[i].Name%></td>
      <td><%=rowContacts[i].Company%></td>
      <td><%=rowContacts[i].Telp_number%></td>
      <td><%=rowContacts[i].Email%></td>
      <td><a href="/contacts/edit/<%=rowContacts[i].ID%>"> Edit </td>
      <td><a href="/contacts/delete/<%=rowContacts[i].ID%>"> Delete </td>

    </tr>
      <%}%>

    <tr>
      <script type="text/javascript">
        function validasi_input(form){
          if (form.Name.value == ""){
          alert("Nama masih kosong!");
          form.Name.focus();
          return (false);
          }
        return (true);
        }
      </script>
    <form class="" action="/contacts" method="post" onsubmit="return validasi_input(this)">
      <td></td>
      <td><input type="text" name="Name" value=""></td>
      <td><input type="text" name="Company" value=""></td>
      <td><input type="text" name="Telp_number" value=""></td>
      <td><input type="text" name="Email" value=""></td>
      <td> <input type="submit" value="Submit!"></td>
    </form>
    </tr>
    </table>
  </body>
</html>
