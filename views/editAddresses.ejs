<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>HALAMAN EDIT Addresses</title>
  </head>
  <body>
      <fieldset>
        <legend><b>Silahkan Edit Data Addresses</b></legend>
          <form action="/addresses/edit/<%= rowAddresses[0].id %>" method="post">
            <table border = "1">
              <tr>
                <td><input type="text" name = "street" value="<%= rowAddresses[0].street %>"></td>
                <td><input type="text" name = "city" value="<%= rowAddresses[0].city %>"></td>
                <td><input type="text" name = "zipcode" value="<%= rowAddresses[0].zipcode %>"></td>
                <td><button><a href = "/addresses" %>>EDIT</a></button</td>

                  <td>
                    <select name ="contacts_id">
                      <% for(var i = 0 ; i < rowContacts.length ; i++)  { %>
                        <% if(rowAddresses[0].contacts_id === rowContacts[i].id) { %>
                            <option value = "<%= rowContacts[i].id %>" selected><%= rowContacts[i].name %></option>
                        <%} else {%>
                          <option value = "<%= rowContacts[i].id %>"><%= rowContacts[i].name %></option>
                      <%}
                    }%>
                    </select>
                  </td>

              </tr>
            </table>
          </form>
      </fieldset>
  </body>
</html>
