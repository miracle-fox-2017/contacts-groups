<html>

<head>
    <title>
        Data Group
    </title>
</head>

<body>
    <header>
        <h3>
            Data Contact
        </h3>
    </header>

    <a href="/">
        Home
    </a>

    <div class="data-table">
        <table>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Name
                </th>
                <th>
                    Assigned Contact
                </th>

                <th colspan="3">
                    Action
                </th>
            </tr>
            <% dataGroup.forEach((group)=>{%>
                <tr>
                    <td>
                        <%= group.id%>
                    </td>
                    <td>
                        <%= group.name_of_group%>
                    </td>
                    <td>
                        <%= group.name %>
                    </td>
                    <td>
                        <a href="/groups/assign_contacts/<%= group.id%>">
                            Assign Contact
                        </a>
                    </td>
                    <td>
                        <a href="/groups/edit/<%= group.id%>">
                            Edit
                        </a>
                    </td>
                    <td>
                        <a href="/groups/delete/<%= group.id%>">
                            Delete
                        </a>
                    </td>
                    <%})%>

                </tr>
        </table>
    </div>
    <a href="/groups/add">
        Add Group
    </a>
</body>

</html>