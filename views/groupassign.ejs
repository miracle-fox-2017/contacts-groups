<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Assign Group</title>
  </head>
  <body>
    <a href="/contacts">contacts</a> | <a href="/groups">groups</a> | <a href="/addresses">address</a> | <a href="/profiles">profile</a>
    <h1>Assign Group</h1>
    <h3>Group Name: <%= rows[0].name_of_group %><h3>
  <div>
    <form class="" action="" method="post">
      <input type="hidden" name="id_groups" value="<%= rows[0].id %>">
      Contact to assign:   
      <select name="id_contacts">
      <% contacts.forEach (contact => { %>
        <option value="<%= contact.id %>"><%= contact.name %></option> 
      <% }) %>
      </select>
      <br>
      <input type="submit" name="" value="KIRIM">
    </form>
  </div>
  
  </body>
</html>

