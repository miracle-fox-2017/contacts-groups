
<!DOCTYPE html>
<html>
  <head>
    <style>
    table {
      font-family: arial, sans-serif;
      border-collapse: collapse;
      width: 100%;
    }

    td, th {
      border: 1px solid #dddddd;
      text-align: left;
      padding: 8px;
    }
    </style>
    <meta charset="utf-8">
    <title>CONTACTS</title>
  </head>
  <body>
    <table>
      <tr>
        <th>No</th>
        <th>Name Group</th>
        <th>Action</th>
      </tr>
        <% let i = 1 %>
      <% groupsRows.forEach(function(el){%>
          <tr>
            <td> <%= i %> </td>
            <td> <%= el.name_of_group %> </td>
            <td><a href="/groups/edit/<%=el.id%>">edit</a>
                <a href="/groups/delete/<%=el.id%>">delete</a>
            </td>
          </tr>
        <% i++ })%>
      </tr>
    </table>
      <% if (isEdit === false) {%>
      <form action="/groups" method="post">
        Name Group:<br>
        <input type="text" name="name_of_group" required/>
        <br>
        <input type="submit" value="ADD">
      </form>
      <%}%>
      <% if (isEdit === true) {%>
        <form action="/groups/edit/<%=groupsRows[0].id%>" method="post">
          Name Group:<br>
          <input type="text" name="name_of_group" value="<%=groupsRows[0].name_of_group%>" required/>
          <br>
          <input type="submit" value="EDIT">
        </form>
        <%}%>
  </body>
</html>
