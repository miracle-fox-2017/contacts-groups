<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Groups</title>
  </head>
  <body>
    <h1>Groups</h1>
    <table>
      <tr>
        <th>id</th>
        <th>Name Of Groups</th>
        <th>Contacts Involved</th>
      </tr>
      <%for(var i = 0; i < data.length; i++) {%>
        <tr>
          <td><%=data[i].id%></td>
          <td><%=data[i].name_of_group%></td>
          <td><%=data[i].groups%></td>
          <td><a href="/groups/assign_contacts/<%=data[i].id%>">assign contacts</a></td>
          <td><a href="/groups/edit/<%=data[i].id%>">edit</a></td>
          <td><a href="/groups/delete/<%=data[i].id%>">delete</a></td>
        </tr>
      <%}%>
    </table>
    <form action="/groups" method="post">
      <input type="input" name="name_of_group" placeholder="Name of Groups">
      <input type="submit" value="submit">
    </form>
  </body>
</html>
