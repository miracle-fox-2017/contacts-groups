<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Halaman Group</title>
  </head>
  <body style = "background-color : aquamarine">
    <div>
    <table border = "1" style = "padding: 5px 10px; font-family : sans-serif">
      <thead>
        <tr>
          <td><b>Id<b></td>
          <td><b>Name Of Groups<b></td>
        </tr>
      </thead>

      <tbody style = "font-size : 10pt">
      <% for (var i = 0 ; i < rowGroups.length ; i++) { %>
        <tr>
            <td><%= rowGroups[i].id %></td>
            <td><%= rowGroups[i].name_of_group %></td>
            <td><a href = "/groups/edit/<%= rowGroups[i].id %>">EDIT</a></td>
            <td><a href = "/groups/delete/<%= rowGroups[i].id %>">DELETE</a></td>
        </tr>
      <%}%>
      </tbody>
    </table>
  </div>

    <div>
      <fieldset>
        <legend><h5>Masukkan Identitas Group</h5></legend>
      <form action="/groups" method="post">
        <table border = "0">
          <tr>
            <td width = "200px" style = "font-size : 10pt"><b>Nama Group</b></td> <td width = "10px">:</td> <td><input type= "text" name = "name_of_group"></td>
          </tr>

          <tr>
            <td width = "200px" style = "font-size : 10pt"></td><td></td><td><input type= "submit" value = "Submit"></td>
          </tr>
      </form>
    </fieldset>
    </div>
  </body>
</html>
