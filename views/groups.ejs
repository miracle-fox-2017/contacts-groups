<!DOCTYPE html>
<html lang="en">
<head>
  <title>Groups</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="#">Hacktiv8</a>
      </div>
      <ul class="nav navbar-nav">
        <li><a href="/">HOME</a></li>
        <li><a href="/contacts">CONTACT</a></li>
        <li class="active"><a href="/groups">GROUPS</a></li>
        <li><a href="/profiles">PROFILES</a></li>
        <li><a href="/addresses">ADDRESSES</a></li>
      </ul>
    </div>
  </nav>
  <div class="container">
    <h2>GROUPS</h2>
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>ID</th>
            <th>GROUP NAME</th>
            <th>CONTACS</th>
            <th colspan="3">ACTION</th>
          </tr>
        </thead>
        <tbody>
          <%dataGroups.forEach (row=> {%>
            <tr>
              <td><%= row.id%></td>
              <td><%= row.name_of_group%></td>
              <td>
                <%for (let i = 0; i < dataContactsGroups.length; i++) {%>
                  <%if(row.id == dataContactsGroups[i].GroupId) {%>
                    <%=dataContactsGroups[i].name%> -
                  <%}%>
                <%}%>
              </td>
              <td>
                <a href="groups/edit/<%=row.id%>">EDIT</a>
                <a href="groups/delete/<%=row.id%>">DELETE</a>
                <a href="groups/assign_contacts/<%=row.id%>">ASSIGN CONTACT</a>
              </td>
            </tr>
            <%})%>
          </tbody>
        </table>
      </div>

      <form class="form-inline" role="form" action="/groups" method="post">
        <div class="form-group">
          <label for="name">Group Name</label>
          <input type="TEXT" name="name_of_group" placeholder="Enter Group name">
        </div>
        <button type="submit" class="btn btn-default">ADD</button>
      </form>
    </div>


  </body>
  </html>
