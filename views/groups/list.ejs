<%- include('../partials/header.ejs')%>
<%- include('../partials/menu.ejs')%>

  <table class="table table-striped">
    <thead>
      <tr>
      	<th>Id</th>
        <th>Name of Group</th>
        <th>Contacts Involved</th>
        <th>Options</th>
      </tr>
    </thead>
    <tbody>
    <%groups.forEach(item=>{%>
      <tr>
        <td><%=item.id%></td>
        <td><%=item.name_of_group%></td>
        <td><%=item.contacts%></td>
        <td>
          <a href="/groups/assign_contacts/<%=item.id%>" class="btn btn-primary" role="button">Assign Contact</a>
        	<a href="#" class="btn btn-primary" role="button">Add</a>
        	<a href="/groups/edit/<%=item.id%>" class="btn btn-primary" role="button">Edit</a>
        	<a href="/groups/delete/<%=item.id%>" class="btn btn-primary" role="button">Delete</a>
        </td>
      </tr>
      <%})%>
    </tbody>
  </table>

