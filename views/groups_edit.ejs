<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Edit data di group</title>
  </head>
  <body>
    <a href="/contacts">contacts</a> | <a href="/groups">groups</a> | <a href="/addresses">address</a> | <a href="/profiles">profile</a>
    <h1>Groups</h1>
    <div>
    <table>
      <tr>
        <th>id</th>
        <th>name_of_group</th>
      </tr>
      <!-- tampilkan semua data contacts -->
      <% rows.forEach (group => { %>
        <tr>
          <td><%= group.id %></td>
          <td><%= group.name_of_group %></td>
          <td><a href="/groups/edit/<%= group.id %>">edit</a> | <a href="/groups/delete/<%= group.id %>">delete</a> </td>
        </tr>
      <% }) %>
      
    </table>
  </div>
  
  <!-- disini tambah form untuk tambah contacts -->
  <div>
    <h2>Edit Groups</h2>
    <form class="" action="" method="post">
      <input type="hidden" name="id" value="<%= rows[0].id %>">
      Nama Grup:   <input type="text" name="name_of_group" value="<%= rows[0].name_of_group %>" placeholder="name_of_group"><br>
      <input type="submit" name="" value="KIRIM">
    </form>
  </div>
  
  </body>
</html>

