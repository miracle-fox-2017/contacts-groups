<!DOCTYPE html>
<html>

  <head>
    <title>R&P - Studio</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="../../assets/css/bootstrap.min.css" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Lobster" rel="stylesheet">

    <!-- Custome CSS -->
    <link rel="stylesheet" href="../../assets/css/custom/style.css" type="text/css">

  </head>
  <body>
    <header>
      <div id="menu">
        <div class="container">
          <div class="row">
            <div class="col-xl-4 col-md-4 col-sm-12">
              <div class="logo">
                <a href="/">
                  <img src="../../assets/img/logo.png" alt="rnp-studio-logo" class="img-fluid">
                  <span><h2 class="studio">Studio</h2></span>
                </a>
              </div>
            </div>
            <div class="col-xl-8 col-md-8 col-sm-12">
              <nav>
                <ul>
                  <li><a href="/">HOME</a></li>
                  <li><a href="/contacts">CONTACTS</a></li>
                  <li><a href="/groups">GROUPS</a></li>
                  <li><a href="/address">ADDRESS</a></li>
                  <li><a href="/profiles">PROFILE</a></li>
                </ul>
              </nav>
            </div>
          </div>
        </div>
      </div>
    </header>

    <div class="container" >
      <div class="row" id="contacts">

        <div class="col-md-12 col-xs-12" id="sub-title">
          <h1 class="text-center">PROFILE</h1>
        </div>

        <div class="col-md-12 col-xs-12" id="add">
          <form class="" action="" method="post">
            <fieldset>
              <legend>Edit Profile</legend>
              <input type="hidden" name="id" value="<%= rows[0].id %>">
              <input type="text" name="username" value="<%= rows[0].username %>" placeholder="Masukkan Username">
              <input type="text" name="password" value="<%= rows[0].password%>" placeholder="Masukkan Password">
              <select class="" name="id_contacts">
                <option selected disabled>Click to Choose -----</option>
                <% data.forEach (contact => {
                  if(contact.id == rows[0].id_contacts ){
                %>
                <option value="<%= contact.id %>" selected><%= contact.name %></option>
                <%}else{%>
                <option value="<%= contact.id %>"><%= contact.name %></option>
                <% }}); %>
              </select>

              <input type="submit" name="submit" value="SUBMIT" class="btn btn-primary">

            </fieldset>

          </form>
        </div>
      </div>
    </div>
    <section id="service">

    </section>

    <footer>
      Copyright &copy 2017 - Riski Nugroho Putra
    </footer>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="../../assets/js/jquery-3.2.1.slim.min.js"></script>
    <script src="../../assets/js/popper.min.js"></script>
    <script src="../../assets/js/bootstrap.min.js"></script>
  </body>
</html>
