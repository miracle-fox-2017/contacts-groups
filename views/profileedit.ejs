<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Edit Profile</title>
  </head>
  <body>
    <table>
      <tr>
      <form class="" action="/profiles/edit/ <%= profilesdata.id %>" method="post">
        <td>Username <input type="text" name="username" value="<%= profilesdata.username %>"></td>
        <td>Password <input type="password" name="password" value="<%= profilesdata.password %>"></td>
        <td><select name="contactsid">
          <% for(let i = 0; i < contactsdata.length; i++){ %>
            <% if (contactsdata[i].id == profilesdata.id_contacts){ %>
            <option selected value="<%= contactsdata[i].id%>"><%= contactsdata[i].name %></option>
            <% } else {%>
            <option value="<%= contactsdata[i].id%>"><%= contactsdata[i].name %></option>
            <% } %>
          <% } %>
        </select></td>
        <td><input type="submit" value="Submit"></td>
      </form>
      </tr>
    </table>
  </body>
</html>