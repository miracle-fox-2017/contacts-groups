<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Profile Edit</title>
  </head>
  <body>
    <h1>Profile Edit</h1>
    <form action="/profiles/edit/<%=data[0].id%>" method="post">
      <input type="input" name="username" placeholder="username" value="<%=data[0].username%>">
      <input type="input" name="password" placeholder="password" value="<%=data[0].password%>">
      <select name="contactId">
        <%for(var i = 0; i < contactname.length; i++){%>
          <%if(contactname[i].id==data[0].contactId) {%>
      <option value="<%=contactname[i].id%>" selected><%=contactname[i].name%></option>
          <%} else {%>
        <option value="<%=contactname[i].id%>"><%=contactname[i].name%></option>
          <%}%>
        <%}%>
      </select>
      <input type="submit" value="submit">
    </form>
    <p><%=error%></p>
  </body>
</html>
