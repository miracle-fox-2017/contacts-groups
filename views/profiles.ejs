		<form action="/profiles/edit" method="post" onsubmit="return validasi_input(this)">
			<td><input type="text" name="username" value="<%= edited[0].username %>"></td>
			<td><input type="password" name="password" value="<%= edited[0].password %>"></td>
			<td><select id="contact_id" name="contact_id" existContact= "<%= tempContact %>" >
			<%for (let i = 0 ; i<contacts.length ;i++ ){%>
					 <% if(edited[0].contact_id == contacts[i].id){%>
						<option value= <%= contacts[i].id %> selected > <%= contacts[i].name %> </option>
					 <%}else{%>			
					 	<option value= <%= contacts[i].id %> > <%= contacts[i].name %> </option>
					 <%}%>	
			<%}%>		
			</select>
			</td>
