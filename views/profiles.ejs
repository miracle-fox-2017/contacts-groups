<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Profiles</title>
  </head>
  <body>
    <table>
  <tr>
    <th>ID</th>
    <th>Username</th>
    <th>Password</th>
    <th>Name</th>
  </tr>
  <% for(let i = 0; i < profilesdata.length; i++){ %>
    <tr>
      <td><%= profilesdata[i].id %></td>
      <td><%= profilesdata[i].username %></td>
      <td><%= profilesdata[i].password %></td>
      <td><%= profilesdata[i].name %></td>
      <td><a href="/profiles/edit/<%= profilesdata[i].id %>"> Edit </td>
      <td><a href="/profiles/delete/<%= profilesdata[i].id %>"> Delete </td>
    </tr>
  <% } %>
  <tr>
  <form class="" action="/profiles" method="post">
    <td></td>
    <td><input type="text" name="username"></td>
    <td><input type="password" name="password"></td>
    <td><select name="contactsid">
      <% for(let i = 0; i < contactsdata.length; i++){ %>
        <option value="<%= contactsdata[i].id%>"><%= contactsdata[i].name %></option>
      <% } %>
    </select></td>
    <td><input type="submit" value="Submit"></td>
  </form>
  </tr>
</table>
  </body>
</html>