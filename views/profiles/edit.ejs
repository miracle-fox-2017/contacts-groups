<!DOCTYPE html>
<html>
  <% include ../partials/header %>
  <body>
    <div class="container">
      <div class="row">
        <div class="column column-50">
          <h1>Edit Profile</h1>

          <table>
            <thead>
              <tr>
                <th><a href="/">Home</a></th>
                <th><a href="/contacts">Contacts</a></th>
                <th><a href="/groups">Groups</a></th>
                <th><a href="/profiles">Profile</a></th>
                <th><a href="/addresses">Addresses</a></th>
              </tr>
            </thead>
          </table><br>

          <form class="" action="/profiles/edit/<%= dataProfile.id %>" method="post">
            Username:<br>
            <input type="text" name="username" value="<%= dataProfile.username %>"><br>
            <br>
            Password:<br>
            <input type="password" name="password" value="<%= dataProfile.password %>"><br>
            <br>
            Contact Name:<br>
            <select name="contactId">
              <% dataContacts.forEach((data) => { %>
                <option value="<%= data.id %>" <%= data.id ==  dataProfile.contactId ? "selected" : "" %>><%= data.name %></option>
              <% }) %>
            </select><br>
            <br>
            <input type="submit" value="Submit">
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
